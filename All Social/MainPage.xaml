<Page
    x:Class="All_Social.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:All_Social"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Storyboard x:Name="iconRotation" AutoReverse="False" RepeatBehavior="Forever">
            <DoubleAnimation Duration="0:0:1" To="360" Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.Rotation)" Storyboard.TargetName="refreshIcon" />
        </Storyboard>
    </Page.Resources>
    <Grid>
        <!--Facebook-->
        <WebView x:Name="AllSocial0" Margin="0,48,0,0" />
        <!--Facebook Messenger-->
        <WebView x:Name="AllSocial1" Margin="0,48,0,0" />
        <!--Twitter-->
        <WebView x:Name="AllSocial2" Margin="0,48,0,0" Visibility="Collapsed" />
        <!--Instagram-->
        <WebView x:Name="AllSocial3" Margin="0,48,0,0" Visibility="Collapsed" />
        <!--Telegram-->
        <WebView x:Name="AllSocial4" Margin="0,48,0,0" Visibility="Collapsed" />
        <CommandBar x:Name="CB" Background="#FF3B5998" VerticalAlignment="Top" BorderBrush="White">
            <AppBarButton x:Name="BACK" Icon="Back" Label="Back" />
            <AppBarButton x:Name="TOP" Icon="Upload" Label="Top" />
            <AppBarButton x:Uid="refreshButton" x:Name="REFRESH" RenderTransformOrigin="0.5,0.5" Label="Refresh">
                <AppBarButton.Icon>
                    <SymbolIcon x:Name="refreshIcon"  Symbol="Refresh" RenderTransformOrigin="0.5,0.5">
                        <SymbolIcon.RenderTransform>
                            <CompositeTransform />
                        </SymbolIcon.RenderTransform>
                    </SymbolIcon>
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton x:Name="HOME" Icon="Home" Label="Home" />
        </CommandBar>
        <Button x:Name="HamburgerButton" FontFamily="Segoe MDL2 Assets" Content="&#xE700;"
                    Width="50" Height="50" Background="Transparent" VerticalAlignment="Top" Canvas.ZIndex="1" FontSize="24" Padding="0,0,0,0" />
        <Grid x:Name="SIDEBAR" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="260" Margin="0,48,0,0" Background="#D83B5998" BorderThickness="0,0,1,0" Visibility="Visible">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Height="75" Background="#72000000" BorderBrush="White" BorderThickness="0,0,0,1">
                    <Image Width="60" Height="60" Source="Assets/Square44x44Logo.targetsize-256.png" Margin="30,0,0,0" VerticalAlignment="Center" />
                    <TextBlock Text="All Social" VerticalAlignment="Center" FontSize="24" Margin="10,0,0,0" />
                </StackPanel>
                <StackPanel x:Name="FaceBook" Orientation="Horizontal" Height="55">
                    <Image x:Name="FB" Source="SocialIcons/Icon_Facebook.png" Width="50" Height="50" />
                    <TextBlock Text="Facebook" FontSize="20" VerticalAlignment="Center" Margin="10,0,0,0" />
                </StackPanel>
                <StackPanel x:Name="FaceBookMess" Orientation="Horizontal" Height="55">
                    <Image x:Name="FBMESS" Source="SocialIcons/Icon_Messenger.png" Width="50" Height="50" />
                    <TextBlock Text="Facebook Messenger" FontSize="20" VerticalAlignment="Center" Margin="10,0,0,0" />
                </StackPanel>
                <StackPanel x:Name="Twitter" Orientation="Horizontal" Visibility="Visible" Height="55">
                    <Image x:Name="TW" Source="SocialIcons/Icon_Twitter.png" Width="50" Height="50" />
                    <TextBlock Text="Twitter" FontSize="20" VerticalAlignment="Center" Margin="10,0,0,0" />
                </StackPanel>
                <StackPanel x:Name="Instagram" Orientation="Horizontal" Visibility="Visible" Height="55">
                    <Image x:Name="INST" Source="SocialIcons/Icon_Instagram.png" Width="50" Height="50" />
                    <TextBlock Text="Instagram" FontSize="20" VerticalAlignment="Center" Margin="10,0,0,0" />
                </StackPanel>
                <StackPanel x:Name="Telegram" Orientation="Horizontal" Visibility="Visible" Height="55">
                    <Image x:Name="TELE" Source="SocialIcons/Icon_Telegram.png" Width="50" Height="50" />
                    <TextBlock Text="Telegram" FontSize="20" VerticalAlignment="Center" Margin="10,0,0,0" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="ABOUT_APP" FontFamily="Segoe MDL2 Assets" Content="&#xE897;"
                        Width="50" Height="50" Background="Transparent" FontSize="20" />
                    <TextBlock Text="About All Social" FontSize="18" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="APP_SETTINGS" FontFamily="Segoe MDL2 Assets" Content="&#xE713;"
                        Width="50" Height="50" Background="Transparent" FontSize="18"/>
                    <TextBlock Text="App Settings" FontSize="18" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="EXIT_APP" FontFamily="Segoe MDL2 Assets" Content="&#xE7E8;"
                        Width="50" Height="50" Background="Transparent" FontSize="18"/>
                    <TextBlock Text="Exit" FontSize="18" VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
            <Grid VerticalAlignment="Bottom" Height="25">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Created with " FontSize="14" />
                    <TextBlock Text=" &#xEB52; " Foreground="#FFDA1D1D" FontSize="14" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" />
                    <TextBlock Text=" in the UK" FontSize="14" />
                </StackPanel>
            </Grid>
        </Grid>
        <Grid x:Name="Info" Margin="15,60,15,15" BorderThickness="1,1,1,1" CornerRadius="5,5,5,5" Canvas.ZIndex="1" Visibility="Collapsed" Background="#FF3B5998">
            <Button x:Name="CloseGrid" Content="&#xE711;" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" Canvas.ZIndex="1" Background="#00000000" FontFamily="Segoe MDL2 Assets" />
            <Pivot x:Name="PivotSettingsAbout" Foreground="White" Background="{x:Null}" Margin="0,50,0,0" BorderThickness="1,1,1,1" BorderBrush="Black">
                <PivotItem x:Name="_PivotAbout" Header="About" Foreground="White">
                    <StackPanel>
                        <Image Height="100" HorizontalAlignment="Left" Source="Assets/Square44x44Logo.targetsize-256.png" />
                        <TextBlock x:Name="App_Name" FontSize="20" TextWrapping="Wrap" Text="SlimBook UWP" />
                        <TextBlock  Name="version" Text="version" />
                    </StackPanel>
                </PivotItem>
                <PivotItem x:Name="_PivotInfo" Header="Info">
                    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5,5,5,5">
                        <ScrollViewer x:Name="ScrollView" IsTabStop="True" VerticalScrollBarVisibility="Auto" Margin="0,5,0,5" BorderBrush="#FFA0A0A0">
                            <TextBlock x:Name="about" TextWrapping="Wrap" Text="privacy" Foreground="White" FontSize="16" />
                        </ScrollViewer>
                    </Grid>
                </PivotItem>
                <PivotItem x:Name="_PivotCredits" Header="Credits" Foreground="White">
                    <StackPanel>
                        <TextBlock x:Name="developers" Text="Developers" FontSize="24" />
                        <HyperlinkButton x:Name="hyperDev" Content="Celestial Doom" HorizontalAlignment="Left" VerticalAlignment="Stretch" FontSize="22" Visibility="Visible" Foreground="White" FontWeight="Bold" />
                        <Grid Height="50" />
                        <Image Height="100" HorizontalAlignment="Left" Source="Assets/Square44x44Logo.targetsize-256.png" />
                        <TextBlock Text="App Logo" TextWrapping="Wrap" FontSize="24" />
                        <HyperlinkButton x:Name="hyperLogo" Content="Post Image" HorizontalAlignment="Left" VerticalAlignment="Stretch" FontSize="22" Foreground="White" FontWeight="Bold" />
                        <TextBlock Text="Donations" TextWrapping="Wrap" FontSize="24" Visibility="Collapsed" />
                        <Button Content="Donations" HorizontalAlignment="Left" VerticalAlignment="Stretch" FontSize="22" Foreground="White" Visibility="Collapsed" />
                    </StackPanel>
                </PivotItem>
                <PivotItem x:Name="_PivotPrivacy" Header="Privacy" Foreground="White">
                    <Grid Margin="0">
                        <ScrollViewer x:Name="myScrollView" IsTabStop="True" VerticalScrollBarVisibility="Auto" Margin="5,5,5,5" BorderBrush="#FFA0A0A0">
                            <TextBlock x:Name="privacy" TextWrapping="Wrap" Text="privacy" />
                        </ScrollViewer>
                    </Grid>
                </PivotItem>
                <PivotItem x:Name="_PivotLicense" Header="License" Foreground="White">
                    <Grid Margin="0">
                        <ScrollViewer x:Name="myScrollViewLicense" IsTabStop="True" VerticalScrollBarVisibility="Auto" Margin="5,5,5,5" BorderBrush="#FFA0A0A0">
                            <TextBlock x:Name="license" TextWrapping="Wrap" Text="privacy" />
                        </ScrollViewer>
                    </Grid>
                </PivotItem>
            </Pivot>
        </Grid>
    </Grid>
</Page>